<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        motion:constraintSetStart="@layout/main_fragment_start"
        motion:constraintSetEnd="@layout/main_fragment_end"
        motion:duration="1000">

        <OnSwipe motion:touchRegionId="@id/wiki_button"
            motion:dragDirection="dragStart"
            motion:dragScale="1.5"
            />
    </Transition>

    <Transition
        motion:constraintSetStart="@layout/main_fragment_end"
        motion:constraintSetEnd="@layout/main_fragment_start"
        motion:duration="500">

        <OnClick motion:targetId="@id/shrink_button"/>

    </Transition>
</MotionScene>
